# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=your_very_long_and_secure_random_secret_key_here

# Database Configuration (Use your actual PostgreSQL credentials)
DATABASE_URI=postgresql://your_username:your_password@your_postgresql_host/cekulit_db
DATABASE_HOST=your_postgresql_host
DATABASE_PORT=5432
DATABASE_NAME=your_database
DATABASE_USER=your_postgres_username
DATABASE_PASSWORD=your_postgres_password

# Machine Learning Model Path
MODEL_PATH=ml_models/skin_type_classifier.pth

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your-unique-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json

# Logging
LOG_LEVEL=INFO
MAX_CONTENT_LENGTH=10485760  # 10 MB in bytes
